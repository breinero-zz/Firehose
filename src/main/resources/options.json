{
    "Firehose": {
        "options": [
            {
                "op": "f",
                "longOpt" : "file",
                "name": "filepath",
                "description":"filename to import",
                "required": true,
                "args" : 1
            },
            {
                "op": "h",
                "longOpt" : "headers",
                "name": "name:type",
                "description": "',' delimited list of columns",
                "required": "true",
                "args": "multi",
                "separator": ","
            },
            {
                "op": "d",
                "longOpt" : "delimiter",
                "name": "delimeter",
                "description": "the value separator used to parse columns. Default ','",
                "args": 1
            }
        ]
    },
    "ApplicationFramework" : {
        "options": [
            {
                "op": "m",
                "longOpt" : "mongos",
                "name": "hostname:port",
                "description": "',' delimited list of mongodb host to connect to. Default localhost:27017,",
                "args": "multi",
                "separator": ","
            },
            {
                "op": "t",
                "longOpt" : "threads",
                "name": "number",
                "description": "number of worker threads. Default 1",
                args: 1
            },
            {
                "op": "wc",
                "longOpt" : "writeConcern",
                "name": "concern",
                "description": "write concern. Default = NORMAL",
                "args": 1
            },
            {
                "op": "ns",
                "longOpt" : "namespace",
                "name": "database.collection",
                "description": "target database and collection this work will use",
                "required": true,
                "args": 2,
                separator: "."
                
            },
            {
                "op": "v",
                "longOpt" : "verbose",
                "name": "verbose",
                "description": "Enabel verbose output",
                "args": "1"
            },
            {
                "op": "pi",
                "longOpt" : "printInterval",
                "name": "interval",
                "description": "print output every n seconds",
                "args": "1"
            },
            {
                "op": "ri",
                "longOpt" : "reporti=Interval",
                "name": "interval",
                "description": "averate stats over an time interval of i milleseconds",
                "args": "1"
            },
            {
                "op": "cr",
                "longOpt" : "noPretty",
                "name": "format",
                "description": "print out in CR-delimited lines. Default is console mode pretty printing, when possible"
            },
            {
                "op": "j",
                "longOpt" : "journal",
                "name": "j",
                "description": "enable write concern wait for journal commit"
            },
            {
                "op": "fs",
                "longOpt" : "fsync",
                "name": "sync",
                "description": "enable write concern wait for page flush"
            },
            {
            	"op": "b",
            	"longOpt": "batch",
            	"args": 1,
            	"description": "Bulk write in batches of n"
            }
        ]
    },
    "RandomDSVGenerator": {
        "options": [
            {
                "op": "f",
                "longOpt" : "file",
                "name": "filepath",
                "description":"filename to import",
                "required": true,
                "args" : 1
            },
            {
                "op": "n",
                "longOpt" : "lines",
                "name": "int",
                "required": true,
                "args" : 1,
                "description": "number of lines to write to the csv"
            },
            {
                "op": "d",
                "longOpt" : "delimiter",
                "name": "delimeter",
                "description": "the value separator used to separate columns. Default ','",
                "args": 1
            }
        ]
    }
}